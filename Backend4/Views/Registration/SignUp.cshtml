@model Backend4.Models.SignUpPersonalInfoViewModel
@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>

<form asp-action="SignUp" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="col-md-2 control-label">First name</label>
        <div class="col-md-10">
            <input type="text" asp-for="@Model.FirstName" class="form-control" />
            <span asp-validation-for="@Model.FirstName"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Last name</label>
        <div class="col-md-10">
            <input type="text" asp-for="@Model.LastName" class="form-control" />
            <span asp-validation-for="@Model.LastName"></span>
        </div>
    </div>    
    <div class="form-group">
        <label class="col-md-2 control-label">Birthday</label>
        <div class="col-md-10 form-inline">
            <select asp-for="@Model.BirthdayDay" class="form-control">
                <option disabled="disabled">Day</option>
                @for(int i = 1; i < 32; i++)
                {
                    <option>@i</option>
                }
            </select>

            <select asp-for="@Model.BirthdayMonth" asp-items="@(new SelectList(ViewBag.AllMonths, "Id", "Name"))" class="form-control">
                <option disabled="disabled">Month</option>
            </select>
            <span asp-validation-for="@Model.BirthdayMonth"></span>

            <select asp-for="@Model.BirthdayYear" class="form-control">
                <option disabled="disabled">Year</option>
                @for (int i = 2020; i > 1899; i--)
                {
                    <option>@i</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Gender</label>
        <div class="col-md-10">
            <div class="radio">
                <label>
                    <input asp-for="@Model.Gender" name="Gender" type="radio" value="Male" />
                    Male
                </label>
            </div>
            <div class="radio">
                <label>
                    <input asp-for="@Model.Gender" name="Gender" type="radio" value="Female" />
                    Female
                </label>
            </div>
            <span asp-validation-for="@Model.Gender"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button type="submit" class="btn btn-primary">Sign up</button>
        </div>
    </div>
</form>